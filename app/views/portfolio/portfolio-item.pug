mixin portfolioItem(jpgName,titleImg,clientName,portfolioId)
    div(class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4")
        div(class="row h-100")
            div(class="col-12")
                img(src="/assets/portfolio/" + jpgName + ".jpg" title=titleImg title-t=titleImg class="w-100")
            div(class="col-12 text-center")
                div(class="row item-desc-portfolio h-100")
                    div(class="col-12")
                        h3(class="mt-3" data-t=clientName)
                    div(class="col-12")
                        button(class="btn btn-outline-dark mb-2 moreDetail" data-t="details" data-portfolioId=portfolioId)