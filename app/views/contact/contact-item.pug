mixin contactItem(itemName, link, titleLink, content)
    div(class="col-12 col-xl-8 offset-xl-2")
        div(class="row attr-block")
            div(class="col-12 col-md-3 col-lg-3 attr-contact text-center text-md-right my-auto")
                span(data-t=itemName)
                hr(class="d-md-none")
            div(class="col-12 col-md-9 col-lg-9 attr-contact-value text-center text-md-left")
                strong
                    a(href=link data-attr-t target="_blank" title-t=titleLink title="Desc Link")
                        | !{content}